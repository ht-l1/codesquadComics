    <div class="middle">
        <div class="section">
            <h1>UPDATE COMIC</h1>
            <div class="form">
                <!-- Add action and methods to these forms   -->
                <form action="/books/<&= foundbook._id &>?_method=PUT" method="POST">
                
                <!--  In both forms add a new input field that has a type of text. This field will temporarily handle images for each new or updating comic book.Â  -->
                <div class="row">
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="image" placeholder="Enter the URL of the image" value="<%= name %>">
                </div>
                
                    <div class="row">
                    <label for="Title">Title: </label>
                    <input type="text" id="title" name="title" value="title value stored in database" value="<%= name %>">
                </div>
                <div class="row">
                    <label for="Author">Author: </label>
                    <input type="text" id="auhtor" name="author" value="author value stored in database" value="<%= name %>">
                </div>
                <div class="row">
                    <label for="Publisher">Publisher: </label>
                    <select name="publisher" id="publisher" value="publisher value stored in database">
                        <option value="BOOM! Box">BOOM! Box</option>
                        <option value="DC Comics">DC Comics</option>
                        <option value="Harry N. Abrams">Harry N. Abrams</option>
                        <option value="Icon Books">Icon Books</option>
                        <option value="Image Comics">Image Comics</option>
                        <option value="Marvel">Marvel</option>
                        <option value="Simion & Schuster">Simion & Schuster</option>
                        <option value="Top Shelf Productions">Top Shelf Productions</option>
                        <option value="VIZ Media LLC">VIZ Media LLC</option>
                        <option value="default" selected>publisher value stored in database</option>
                    </select>
                </div>
                <div class="row">
                    <label for="Genre">Genre: </label>
                    <input type="text" id="genre" name="genre" placeholder="Genre"
                        value="genere data stored in database"  value="<%= name %>">
                </div>
                <div class="row">
                    <label for="pages">Numer of pages: </label>
                    <input type="text" id="pages" name="pages" value="pages stored in database"  value="<%= name %>">
                </div>
                <div class="row">
                    <label for="Rating">Rating</label>
                    <input type="text" id="rating" name="rating" value="rating stored in database"  value="<%= name %>">
                </div>
                <div class="row">
                    <label for="Synopsis">Synopsis</label>
                    <textarea name="text" id="synopsis">synopsis value stored in database</textarea>
                </div>
                <div class="row"><button>Submit</button></div>
            </form></div>
